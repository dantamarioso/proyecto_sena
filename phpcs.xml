<?xml version="1.0"?>
<ruleset name="Proyecto SENA">
    <description>Estándares de código para el proyecto SENA</description>

    <!-- Archivos a verificar -->
    <file>app</file>
    <file>config</file>
    <file>public</file>

    <!-- Excluir directorios -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/database/*</exclude-pattern>
    <exclude-pattern>*/public/css/*</exclude-pattern>
    <exclude-pattern>*/public/js/*</exclude-pattern>
    <exclude-pattern>*/public/img/*</exclude-pattern>

    <!-- Usar PSR-12 como base -->
    <rule ref="PSR12"/>

    <!-- Configuración adicional -->
    <arg name="colors"/>
    <arg value="sp"/> <!-- Mostrar progreso y sniff codes -->
    <arg name="parallel" value="8"/> <!-- Usar 8 procesos paralelos -->
    <arg name="extensions" value="php"/>
    <arg name="encoding" value="utf-8"/>

    <!-- Ignorar warnings sobre nombres de variables camelCase (PHP usa snake_case comúnmente) -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <severity>0</severity>
    </rule>

    <!-- Personalización para el proyecto -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>
